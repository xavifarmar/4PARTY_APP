<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Contenedor de producto (imagen y detalles) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="1">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/profile_icon"
            android:scaleType="centerCrop" />

        <!-- Detalles del producto (nombre, color, tamaÃ±o, precio) -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6">

            <TextView
                android:id="@+id/productNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/ProductColorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color: Red"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/ProductSizeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size: M"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Precio del producto -->
            <TextView
                android:id="@+id/ProductPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: $50.00"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Contenedor de cantidad -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp">

            <Button
                android:id="@+id/btnIncrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="18sp"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/ProductQuantityTxt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDecrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@color/red" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

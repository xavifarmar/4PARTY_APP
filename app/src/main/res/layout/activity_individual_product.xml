<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Contenedor principal (LinearLayout horizontal) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Producto 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="223dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:onClick="navigateToProduct">

            <!-- Título del Producto -->
            <TextView
                android:id="@+id/product_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/product_title"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Imagen del Producto -->
            <ImageView
                android:id="@+id/image_product1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <!-- Precio y Botón de Like -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_product1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:layout_marginRight="40dp"
                    android:textColor="@android:color/black"
                    android:textSize="22sp" />

                <ImageButton
                    android:id="@+id/like1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/like_button"
                    app:srcCompat="@drawable/heart_icon"
                    android:layout_marginLeft="20dp"
                    app:tint="@android:color/black" />
            </LinearLayout>

        </LinearLayout>

        <!-- Producto 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="223dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Título del Producto -->
            <TextView
                android:id="@+id/product_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="@string/product_title"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Imagen del Producto -->
            <ImageView
                android:id="@+id/image_product2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <!-- Precio y Botón de Like -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_product2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/like2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/like_button"
                    app:tint="@android:color/black"
                    app:srcCompat="@drawable/heart_icon" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

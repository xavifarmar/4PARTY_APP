<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the shape -->
    <solid android:color="@color/red"/> <!-- Fondo transparente -->
    <stroke
        android:color="@android:color/black"
    android:width="1dp"/> <!-- Grosor del borde -->

    <!-- Define the size and roundness (circular) -->
    <size
        android:width="20dp"
        android:height="20dp"/> <!-- Tamaño del botón -->

    <corners
        android:radius="60dp"/> <!-- Radio para hacerlo circular -->
</shape>
